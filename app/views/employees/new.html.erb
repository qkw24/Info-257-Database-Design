<!DOCTYPE html>
<html lang="en">
<title>Employee</title>
<head>
  <meta charset="utf-8">
  <title>Styles Conference</title>
  <%= stylesheet_link_tag "main" %>
  <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Lato:100,300,400">
</head>

<body>
  <%= render 'layouts/header' %>
  <section class="row-alt">
  <div class="lead container">
    <h1>Employee Profile</h1>
  </div>
</section>

<section class="row">
  <div class="grid">
      <fieldset class="register-group" >
        <%=form_for(@employee) do |f| %>
            <%= f.label :FirstName, "First Name" %>
            <%= f.text_field :FirstName, class: "col-1-3" %>

            <%= f.label :MiddleName, "Middle Name" %>
            <%= f.text_field :MiddleName, class: "col-1-3" %>

            <%= f.label :LastName, "Last Name" %>
            <%= f.text_field :LastName, class: "col-1-3" %>

            <%= f.label :Birthday, "Date of Birth" %>
            <%= f.date_select :Birthday, class: "col-1-3" %>

            <%= f.label :Email %>
            <%= f.text_field :Email, class: "col-1-3" %>

            <%= f.label :role_id, "Position" %>
            <%= f.select(:id, @user_options) %>

            <%= f.label :Pay, "Paid Rate (per hour)" %>
            <%= f.number_field :Pay, class: "col-1-3" %>

            <%= f.label :Address %>
            <%= f.text_field :Address, class: "col-1-3" %>

            <h1>Schedule</h1>
            <%=form_for(@employee_schedule) do |j| %>

                <%= j.label :startTime, "Start Time" %>
                <%= j.time_select :startTime %>

                <%= j.label :endTime, "End Time" %>
                <%= j.time_select :endTime %>


                <%= j.label :bus_id, "Bus ID" %>
                <%= j.text_field :bus_id %>
                </fieldset>
                <%= j.submit "Done", class: "btn btn-default" %>
                <% end %>

        <% end %>
  </div>
</section>
  <%= render 'layouts/footer' %>
</body>
</html>